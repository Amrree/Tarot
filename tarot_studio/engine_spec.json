{
  "engine_specification": {
    "version": "1.0.0",
    "description": "Tarot Influence Engine API Specification",
    "author": "Tarot Studio Team",
    "date": "2024-01-15"
  },
  "api_contract": {
    "input_schema": {
      "type": "object",
      "required": ["reading_id", "spread_type", "positions"],
      "properties": {
        "reading_id": {
          "type": "string",
          "description": "Unique identifier for the reading"
        },
        "date_time": {
          "type": "string",
          "format": "date-time",
          "description": "ISO8601 timestamp of the reading"
        },
        "spread_type": {
          "type": "string",
          "enum": ["single_card", "three_card", "celtic_cross", "relationship_cross", "year_ahead"],
          "description": "Type of tarot spread"
        },
        "positions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["position_id", "card_id", "orientation"],
            "properties": {
              "position_id": {
                "type": "string",
                "description": "Position identifier in the spread"
              },
              "card_id": {
                "type": "string",
                "description": "Card identifier from the deck"
              },
              "orientation": {
                "type": "string",
                "enum": ["upright", "reversed"],
                "description": "Card orientation"
              }
            }
          }
        },
        "user_context": {
          "type": "string",
          "description": "Optional user question or context"
        },
        "engine_config": {
          "type": "object",
          "properties": {
            "dominance_multiplier": {"type": "number", "default": 1.5},
            "reversal_decay_factor": {"type": "number", "default": 0.8},
            "conflict_threshold": {"type": "number", "default": 0.5},
            "theme_threshold": {"type": "number", "default": 0.3},
            "enable_llm_generation": {"type": "boolean", "default": true}
          }
        },
        "rule_overrides": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {"type": "string"},
              "card_id": {"type": "string"},
              "multiplier": {"type": "number"},
              "theme": {"type": "string"},
              "boost_factor": {"type": "number"}
            }
          }
        }
      }
    },
    "output_schema": {
      "type": "object",
      "required": ["reading_id", "summary", "cards"],
      "properties": {
        "reading_id": {"type": "string"},
        "summary": {"type": "string"},
        "cards": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["position", "card_id", "card_name", "orientation", "base_text", "influenced_text", "polarity_score", "intensity_score", "themes", "influence_factors", "journal_prompt"],
            "properties": {
              "position": {"type": "string"},
              "card_id": {"type": "string"},
              "card_name": {"type": "string"},
              "orientation": {"type": "string", "enum": ["upright", "reversed"]},
              "base_text": {"type": "string"},
              "influenced_text": {"type": "string"},
              "polarity_score": {"type": "number", "minimum": -2.0, "maximum": 2.0},
              "intensity_score": {"type": "number", "minimum": 0.0, "maximum": 1.0},
              "themes": {
                "type": "object",
                "additionalProperties": {"type": "number", "minimum": 0.0, "maximum": 1.0}
              },
              "influence_factors": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["source_position", "source_card_id", "effect", "explain"],
                  "properties": {
                    "source_position": {"type": "string"},
                    "source_card_id": {"type": "string"},
                    "effect": {"type": "string"},
                    "explain": {"type": "string"}
                  }
                }
              },
              "journal_prompt": {"type": "string"}
            }
          }
        },
        "advice": {
          "type": "array",
          "items": {"type": "string"}
        },
        "follow_up_questions": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  },
